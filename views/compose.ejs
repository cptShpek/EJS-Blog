<%- include('partials/header') -%>

<h1>Compose</h1>

    <form action="/compose" method="POST">
        <div class="form-group">
            <label>Title</label>
            <input required class="form-control" type="text" name="postTitle">
            <label>Post</label>
            <textarea required class="form-control" name="postBody" cols="30" rows="5"></textarea>
        </div>
        <button class="btn btn-primary m-3" type="submit">Publish</button>
    </form>

<%- include('partials/footer') -%>